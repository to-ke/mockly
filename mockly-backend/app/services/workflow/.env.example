# Copy this to .env locally (DO NOT COMMIT .env) and fill in your keys
ANTHROPIC_API_KEY=
DEEPGRAM_API_KEY=

# Claude model (pinned snapshot)
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Deepgram models/settings
DEEPGRAM_TTS_VOICE=aura-2-hyperion-en   # see voices in docs
DEEPGRAM_STREAM_ENCODING=linear16     # allowed for streaming: linear16|mulaw|alaw
DEEPGRAM_SAMPLE_RATE=48000            # typical for Aura-2 streaming

# CORS for frontend dev (comma-separated or *). Example values:
# CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173
# CORS_ALLOW_ORIGINS=*
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173
